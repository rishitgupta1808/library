{
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "all",
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "useTabs": false,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json",
          "singleQuote": false
        }
      },
      {
        "files": "*.ts",
        "options": {
          "parser": "typescript"
        }
      }
    ]
  }